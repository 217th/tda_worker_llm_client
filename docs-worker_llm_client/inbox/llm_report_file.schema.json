{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/llm_report_file.schema.json",
  "title": "LLMReportFile",
  "description": "Канонический артефакт LLM отчёта: metadata + summary + details (всё в одном JSON).",
  "type": "object",
  "additionalProperties": false,
  "required": ["metadata", "summary", "details"],
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["runId", "stepId", "createdAt", "symbol", "timeframe", "llm", "inputs"],
      "properties": {
        "runId": {
          "type": "string",
          "description": "Flow run docId.",
          "pattern": "^[0-9]{8}-[0-9]{6}_[A-Z0-9]+(?:-[A-Z0-9]+)*_[a-z0-9]{3,6}$"
        },
        "stepId": { "type": "string", "minLength": 1 },
        "createdAt": { "type": "string", "format": "date-time" },
        "symbol": { "type": "string", "minLength": 1 },
        "timeframe": { "type": "string", "minLength": 1 },
        "llm": {
          "type": "object",
          "additionalProperties": false,
          "required": ["promptId", "modelId"],
          "properties": {
            "promptId": { "type": "string", "minLength": 1 },
            "modelId": { "type": "string", "minLength": 1 }
          }
        },
        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "required": ["ohlcv_gcs_uri", "charts_outputsManifestGcsUri"],
          "properties": {
            "ohlcv_gcs_uri": { "type": "string", "pattern": "^gcs://.+" },
            "charts_outputsManifestGcsUri": { "type": "string", "pattern": "^gcs://.+" },
            "reportIds": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["markdown"],
      "properties": {
        "markdown": {
          "type": "string",
          "description": "Человекопонятное краткое резюме."
        },
        "html": {
          "type": "string",
          "description": "Опционально: HTML версия summary (если генерируется)."
        }
      }
    },
    "details": {
      "type": "object",
      "description": "Большой JSON с подробностями отчёта (структура может эволюционировать).",
      "additionalProperties": true
    }
  }
}


